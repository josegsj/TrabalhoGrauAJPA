<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
xmlns="http://xmlns.jcp.org/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
<persistence-unit name="dev2" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

	<!-- Model -->
	<class>br.unisinos.bd2.model.Categoria</class>
	<class>br.unisinos.bd2.model.Cor</class>
	<class>br.unisinos.bd2.model.Departamento</class>
	<class>br.unisinos.bd2.model.Empresa</class>
	<class>br.unisinos.bd2.model.EstoqueGradeItem</class>
	<class>br.unisinos.bd2.model.Grade</class>
	<class>br.unisinos.bd2.model.GradeItem</class>
	<class>br.unisinos.bd2.model.Holding</class>
	<class>br.unisinos.bd2.model.Loja</class>
	<class>br.unisinos.bd2.model.LojaDepartamento</class>
	<class>br.unisinos.bd2.model.Produto</class>
	<class>br.unisinos.bd2.model.Secao</class>
	<class>br.unisinos.bd2.model.Tamanho</class>
	
	<exclude-unlisted-classes>true</exclude-unlisted-classes>
	<properties>
		<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="false" />
		<property name="hibernate.hbm2ddl.auto" value="create" />
		<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
	
		<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/dev2" />
		<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
		<property name="javax.persistence.jdbc.user" value="postgres" />
		<property name="javax.persistence.jdbc.password" value="root" />
	</properties>
</persistence-unit>
</persistence>
